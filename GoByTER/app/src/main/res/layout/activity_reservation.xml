<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/login_applogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/logo"
        />

    <Spinner
        android:id="@+id/spDepart"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/login_applogo"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        />

    <Spinner
        android:id="@+id/spArret"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/spDepart"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="20dp" />

    <EditText
        android:id="@+id/nbPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_below="@id/spArret"
        android:ems="10"
        android:hint="Nombre de place"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btn_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nbPlace"
        android:text="Reserver"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:background="@drawable/buttons"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_applogo"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-130dp"
        android:layout_toStartOf="@+id/spDepart"
        android:text="@string/depart"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="-130dp"
        android:layout_toStartOf="@+id/spArret"
        android:text="@string/destination"
        android:textSize="24sp" />
</RelativeLayout>